<h4>Post details</h4>
<p>
	<%= @posts.content %>
	<br />
	<br />
	<span style="font-size: 75%; color: #999">Added by <%= @posts.author %> at <%= @posts.created_at %></span>
	<br />
</p>
<br />
<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment| %>
	<p>
		<%= comment['content'] %>
		<br />
		<span style="font-size: 75%; color: #999">Added at <%= comment['created_at'] %></span>
	</p>
	<hr />
<% end %>

<p>
	<form action="/details/<%= @posts['id'] %>" method="POST" role="form">
		<textarea name="comment[content]" class="form-control" rows="6" placeholder="Type comment" style="width: 800px"></textarea>
		<INPUT TYPE="HIDDEN" NAME="comment[post_id]" VALUE ="<%= @posts['id'] %>">
		<br />
		<button type="submit" class="btn btn-success">&emsp;OK&emsp;</button>
	</form>
</p>
